        <body>
            <div type="apparatus">
                <head type="title">&#x201C;The Ship&#x201D; [<date notBefore="1828" notAfter="1829">1828&#x2013;29</date>]</head>
                
                <div type="section" xml:id="WITNESSES">
                    <head type="section">Witnesses</head>
                    <list>
                        <item><hi rend="bold"><title type="manuscript" corresp="#MSII">MS II</title></hi>
